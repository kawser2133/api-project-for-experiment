<?xml version="1.0" encoding="utf-8"?>

<log4net debug="false">
  <appender name="AppLog" type="log4net.Appender.RollingFileAppender">
    <file value="${LOCALAPPDATA}/Log_TCap/Log_TCap.txt" />
    <appendToFile value="true" />
    <maximumFileSize value="2MB" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="2" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%d{yyyy-MM-dd HH:mm:ss}] [%-5p] %c - %m%n" />
      <!-- <conversionPattern value="[%d{yyyy-MM-dd HH:mm:ss}] [%t] %-5p %c - %m%n" /> -->
    </layout>
  </appender>
  <!-- levels: DEBUG, INFO, WARN, ERROR, FATAL -->
  <root>
    <appender-ref ref="AppLog" />
  </root>
  <logger name="AppLog">
    <level value="ALL" />
    <appender-ref ref="AppLog" />
  </logger>  
</log4net>